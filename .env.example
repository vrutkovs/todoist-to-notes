# Todoist to Obsidian Notes Exporter Configuration
#
# Copy this file to .env and fill in your actual values
#
# Get your Todoist API token from: https://todoist.com/prefs/integrations

# REQUIRED: Your Todoist API token
TODOIST_API_TOKEN=your_todoist_api_token_here

# OPTIONAL: Default export settings (uncomment to use)

# Default output directory for exports
# EXPORT_OUTPUT_DIR=./obsidian_export

# Include completed tasks in export (true/false)
# EXPORT_INCLUDE_COMPLETED=false

# Include task comments in export (true/false)
# EXPORT_INCLUDE_COMMENTS=true

# Create separate folders for each project (true/false)
# EXPORT_CREATE_PROJECT_FOLDERS=true

# Prefix for generated tags
# EXPORT_TAG_PREFIX=todoist

# Date format for due dates and timestamps
# EXPORT_DATE_FORMAT=%Y-%m-%d

# Time format for timestamps
# EXPORT_TIME_FORMAT=%H:%M

# Add priority levels as tags (true/false)
# EXPORT_PRIORITY_AS_TAGS=true

# Add labels as tags (true/false)
# EXPORT_LABELS_AS_TAGS=true
